<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/settings_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/spotifyplus_background">

    <!-- App bar with collapsing header -->
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/lyrics_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#272727"
                android:gravity="center"
                app:titleCentered="true"
                app:title="Beautiful Lyrics"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:navigationIcon="?attr/homeAsUpIndicator"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                                           android:paddingTop="16dp" android:paddingStart="16dp"
                                           android:clickable="true" android:focusable="true"
                                           app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Visuals" style="@style/TextAppearance.Material3.TitleLarge"
                      android:paddingBottom="12dp"/>

            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:clickable="true" android:focusable="true"
                    android:background="@drawable/row_click_bg">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <LinearLayout
                            android:layout_height="0dp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animation Style"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:paddingBottom="4dp"
                        />

                        <TextView
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Whether lyrics should be animated more like Beautiful Lyrics or Apple Music"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                                      android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="48dp"
                                      android:text="Beautiful Lyrics" style="@style/TextAppearance.Material3.BodyMedium"
                                      android:gravity="center_vertical"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="48dp"
                                      android:text="Apple Music" style="@style/TextAppearance.Material3.BodyMedium"
                                      android:gravity="center_vertical"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical" android:gravity="end">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rb_beautiful_lyrics_anim"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:checked="true"/>

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rb_apple_music_anim"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RadioGroup>

            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:clickable="true" android:focusable="true"
                    android:background="@drawable/row_click_bg">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <LinearLayout
                            android:layout_height="0dp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Interlude Duration"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:paddingBottom="4dp"
                        />

                        <TextView
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The minmum amount of time it takes for an interlude to show up"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                                      android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="48dp"
                                      android:text="Beautiful Lyrics" style="@style/TextAppearance.Material3.BodyMedium"
                                      android:gravity="center_vertical"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="48dp"
                                      android:text="Spotify Plus" style="@style/TextAppearance.Material3.BodyMedium"
                                      android:gravity="center_vertical"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="48dp"
                                      android:text="Apple Music" style="@style/TextAppearance.Material3.BodyMedium"
                                      android:gravity="center_vertical"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical" android:gravity="end">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rb_beautiful_lyrics_interlude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:checked="true"/>

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rb_spotify_plus_interlude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:checked="true"/>

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rb_apple_music_interlude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RadioGroup>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:clickable="true" android:focusable="true"
                    android:background="@drawable/row_click_bg">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable Background"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:paddingBottom="4dp" />

                    <TextView
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Whether the background should be an animated background or just a static color"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_enable_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:checked="true"
                        android:contentDescription="Enable Background"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:clickable="true" android:focusable="true"
                    android:background="@drawable/row_click_bg">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable Line Lyrics Gradient"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:paddingBottom="4dp" />

                    <TextView
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sets whether lines should have a gradient or stay a solid color in line synced lyrics"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_enable_line_gradient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:checked="true"
                        android:contentDescription="Enable Line Lyrics Gradient"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.08"
                    android:background="?attr/colorOnSurface"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="16dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Privacy" style="@style/TextAppearance.Material3.TitleLarge"
                      android:paddingBottom="12dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:clickable="true" android:focusable="true"
                    android:background="@drawable/row_click_bg">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send Access Token"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:paddingBottom="4dp" />

                    <TextView
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send your Spotify access token to the Beautiful Lyrics API. If disabled, some songs will not load lyrics"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_send_token"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:checked="true"
                        android:contentDescription="Send Access Token"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:clickable="true" android:focusable="true"
                    android:background="@drawable/row_click_bg">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check For User Lyrics"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:paddingBottom="4dp" />

                    <TextView
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checks for any syllable synced lyrics that users synced. These lyrics may be inaccureate and it might take longer for line synced lyrics to load"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_check_user_lyrics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:checked="true"
                        android:contentDescription="Check For User Lyrics"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>
